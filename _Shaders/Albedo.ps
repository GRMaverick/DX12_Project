#include "IOStructures/Albedo.io"
#include "RootSignatures/Albedo.rs"

//
// Constant Buffers / Resource Bindings
//
Texture2D Albedo : register(t0);
SamplerState AlbedoSampler : register(s0);

//
// Entry Point
//
[RootSignature(RootSignatureDef)]
float4 main(VSOutput _input) : SV_TARGET
{
	return Albedo.Sample(AlbedoSampler, _input.Texture);
}